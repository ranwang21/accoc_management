<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fontColor"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:orientation="horizontal"
        android:showDividers="beginning|end|none">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:contentDescription="@string/logo_image"
            app:srcCompat="@drawable/logo" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fitsSystemWindows="false"
            android:orientation="vertical"
            android:translationX="150dp">

            <Button
                android:id="@+id/button_presence"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:text="@string/save" />

            <Spinner
                android:id="@+id/spinner_presence"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </LinearLayout>

    </LinearLayout>

    <ListView
        android:id="@+id/list_presence"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:choiceMode="multipleChoiceModal"
        android:clickable="true"
        android:focusable="true"></ListView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:contentDescription="@string/logo_image"
            app:srcCompat="@drawable/logo" />

        <Spinner
            android:id="@+id/spinner_colab"
            android:layout_width="wrap_content"
            android:layout_height="47dp"
            android:layout_marginTop="60dp"
            android:layout_weight="1" />
    </LinearLayout>

    <ListView
        android:id="@+id/list_enfant"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.15"
        android:background="@color/fontColor"
        android:contentDescription="@string/logoback"
        android:keepScreenOn="true"
        android:visibility="visible"
        app:srcCompat="@drawable/logo_part_1" />


</LinearLayout>