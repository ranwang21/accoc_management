<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.15"
        android:visibility="visible"
        app:srcCompat="@drawable/logo_part_1"
        android:contentDescription="@string/logoback" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/salle1"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="209dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="300dp"

            android:layout_marginStart="140dp"
            android:layout_marginTop="100dp"

            android:text="@string/salle_1"
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#019193"
            android:textSize="24sp"
            android:textStyle="bold"
            android:typeface="monospace" />

        <Button
            android:id="@+id/salle2"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="203dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="210dp"

            android:layout_marginStart="140dp"
            android:layout_marginTop="100dp"

            android:text="@string/salle_2"
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#019193"
            android:textSize="24sp"
            android:textStyle="bold"
            android:typeface="monospace" />

        <Button
            android:id="@+id/salle3"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="210dp"

            android:layout_marginStart="140dp"
            android:layout_marginTop="100dp"

            android:text="@string/salle_3"
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#019193"
            android:textSize="24sp"
            android:textStyle="bold"
            android:typeface="monospace" />

        <Button
            android:id="@+id/salle4"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="195dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="210dp"

            android:layout_marginRight="210dp"
            android:layout_marginStart="140dp"

            android:layout_marginTop="100dp"
            android:text="@string/salle_4"
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#019193"
            android:textSize="24sp"
            android:textStyle="bold"
            android:typeface="monospace" />
    </LinearLayout>

</FrameLayout>