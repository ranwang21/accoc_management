        android:layout_marginTop="15dp"
        android:layout_marginRight="30dp"
        android:text="Test"
        android:textAlignment="center"
        android:textColor="#FF0000"
        android:textSize="15dp"
        android:visibility="gone"
        android:gravity="center_horizontal" />

